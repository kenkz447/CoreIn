<!DOCTYPE html>
<html>
<head>
    @Html.Partial("Layout-Parts/head")
</head>
<body class="app header-fixed sidebar-fixed">
    @await Component.InvokeAsync("CoreIn_Modules_App/Appbar")
    <div class="app-body">
        <aside class="sidebar">
            <nav class="sidebar-nav open">
                @await Component.InvokeAsync("CoreIn_Modules_App/NavigationMenu", new { args = new {menu_Class = "nav" } })
            </nav>
        </aside>
        <main class="main">
            @await Component.InvokeAsync("CoreIn_Modules_App/Breadcrumb")
            <div class="page-content container-fluid">
                <div class="animated fadeIn aside-menu-fixed">
                    @RenderBody()               
                </div>
            </div>
        </main>
    </div>
    <environment names="Development">
        <script type="text/javascript" src="~/js/vendor.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script type="text/javascript" src="~/js/vendor.min.js"></script>
    </environment>
    @Html.RenderJavaScripts()
    @Html.ReactInitJavaScript()
</body>
</html>
